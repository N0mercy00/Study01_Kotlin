<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Listener">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#202020">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!--라인-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#22754E"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="1"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                >

            </TextView>
            <TextView
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="2"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                >

            </TextView><TextView
            android:id="@+id/btn_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#22754E"
            android:text="3"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="@color/white"
            >

        </TextView><TextView
            android:id="@+id/btn_ca"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E8640D"
            android:text="CA"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="@color/white"
            >

        </TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#22754E">

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="4"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="5"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="6"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E8640D"
                android:text="+"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:background="#22754E">
            <TextView
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="7"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="8"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#22754E"
                android:text="9"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="0"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>