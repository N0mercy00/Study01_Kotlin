<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/upperbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#202020"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/youtube"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:text="Mercy00Tube"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/upperbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#202020">

                <ImageView
                    android:id="@+id/thum1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/example1"/>
                <ImageView
                    android:id="@+id/chnnel1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile"
                    android:layout_below="@id/thum1"
                    android:layout_marginStart="50dp"/>
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:layout_below="@id/thum1"
                    android:text="[B대면데이트]2:1데이트 방재호 차진석"
                    android:layout_alignStart="@id/chnnel1"
                    android:layout_marginStart="50dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1"
                    android:text="피식대학Psick Univ\n조회수 7.2천 · 1시간 전"
                    android:layout_alignStart="@id/chnnel1"
                    android:layout_marginStart="50dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>







        </LinearLayout>

    </ScrollView>




</RelativeLayout>